<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Account Creation</title>
  <link rel="stylesheet" href="css/signup.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-sqPw9Y3/bqaXONVIHKqcswHcZE9j+K7++gEKHzPwlgxQ+Gkbh0ICBXazwa7JYDGlAZ7tbIvjPsPAtb7YfmS/JQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
  <!-- Add your CSS styling here -->
</head>
<body>
  <div class="signup-container">
    <a href="/dashboard"><button class="back_button">Back</button></a>
    <h1 class="signup-text-header">Account Creation</h1>
    <form action="/signup" method="POST">
      <label for="username">Username:</label>
      <input class="signup-input" type="text" id="username" name="username" required>

      <label for="email">Email:</label>
      <input class="signup-input" type="text" id="email" name="email" required>

      <label for="first_name">First Name:</label>
      <input class="signup-input" type="text" id="first_name" name="first_name" required>

      <label for="last_name">Last Name:</label>
      <input class="signup-input" type="text" id="last_name" name="last_name" required>

      <label for="password">Password:</label>
      <div class="password-container">
        <input class="signup-input password-field" type="password" id="password" name="password" required>
        <span class="toggle-password">
          <i class="fas fa-eye"></i>
        </span>
      </div>

      <label for="confirm-password">Confirm Password:</label>
      <div class="password-container">
        <input class="signup-input password-field" type="password" id="confirm-password" name="confirm-password" required>
        <span class="toggle-password">
          <i class="fas fa-eye"></i>
        </span>
        <span class="password-match">
          <i class="fas fa-times-circle unmatch-icon"></i>
          <i class="fas fa-check-circle match-icon"></i>
        </span>
        
      </div>

      <label for="position">Role:</label>
      <select class="signup-input" id="position" name="position" required>
        <% roles.forEach(roles => { %>
          <option value="<%= roles.position %>"><%= roles.position %></option>
        <% }) %>
      </select>

      <button type="submit" class="signup-button">Sign Up</button>

    </form>

  </div>

  <script src="js/signup.js"></script>
</body>
</html>
