<!DOCTYPE html>
<html>

<head>
    <title>Inventory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/sidebar.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body>

    <%- include('sidebar.ejs') %>


        <div class="content">

            <h1>View Raw Materials</h1>
            <div class="search-container">
                <label for="searchBarSales">Search:</label>
                <input type="text" id="searchBarSales" placeholder="Material Name">
            </div>
            <table>
                <thead>
                    <tr>
                        <th class="box">Material Name</th>
                        <th class="box">Quantity</th>
                        <th class="box">Unit Measure</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (materials && materials.length> 0) { %>
                        <% materials.forEach(material=> { %>
                            <tr>
                                <td>
                                    <%= material.name %>
                                </td>
                                <td>
                                    <%= material.quantity %>
                                </td>
                                <td>
                                    <%= material.unit_Measure %>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">No raw materials data available</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        <script>
            $(document).ready(function() {
                $("#searchBarSales").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("table tbody tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                    });
                });
            });
        </script>
        

</body>

</html>